{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": [
      "./@types"
    ],
  },
  "exclude": [
    "typings/browser.d.ts",
    "typings/browser",
    "node_modules"
  ],
  "include": [
    "components/*",
    "constants/*",
    "data/*",
    "hooks/*",
    "navigation/*",
    "screens/*",
    "App.tsx",
    "types.tsx"
  ]
}
